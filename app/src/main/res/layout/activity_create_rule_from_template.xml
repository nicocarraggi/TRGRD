<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.example.nicolascarraggi.trgrd.CreateRuleFromTemplateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Name"/>

        <EditText
            android:id="@+id/etCreateRuleFromTemplateName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter a name for the rule..."/>

    </LinearLayout>

<!--    <TextView
        android:layout_width="76dp"
        android:layout_marginBottom="7dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Triggers"/>-->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvCreateRuleFromTemplateTriggers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

<!--
    <TextView
        android:layout_width="76dp"
        android:layout_marginBottom="7dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Actions"/>
-->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvCreateRuleFromTemplateActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
