<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    tools:context="com.example.nicolascarraggi.trgrd.AddEventOrStateActivity$PlaceholderFragment">

    <LinearLayout
        android:id="@+id/llAddEventOrStateEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@color/colorEvent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:text="You already added an event!"/>

        <TextView
            android:id="@+id/tvAddEventOrStateEventsRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="7dp"
            android:text="It is preferred to have only 1 event (which can be combined with states) to trigger a rule."/>

        <Button
            android:id="@+id/bAddEventOrStateEventOk"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Okay"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvAddEventOrStateTriggers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:fadeScrollbars="false"
        android:scrollbars="vertical"
        android:layout_marginBottom="5dp" />

</LinearLayout>
